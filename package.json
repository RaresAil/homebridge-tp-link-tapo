{
  "private": false,
  "displayName": "TPLink Smart Lights",
  "name": "homebridge-tplink-smart-light",
  "version": "2.0.1",
  "description": "A platform to implement the tplink light bulbs with Adaptive Lighting",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/RaresAil/homebridge-tplink-smart-light.git"
  },
  "bugs": {
    "url": "https://github.com/RaresAil/homebridge-tplink-smart-light/issues"
  },
  "engines": {
    "homebridge": ">=1.3.9",
    "node": ">=14.18.1"
  },
  "main": "dist/index.js",
  "scripts": {
