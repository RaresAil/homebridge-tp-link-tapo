  "resolutions": {
    "follow-redirects": "^1.14.7",
    "ansi-regex": "^5.0.1"
  },
  "devDependencies": {
    "@types/async-lock": "^1.1.3",
    "@types/node": "^17.0.8",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.7.0",
    "homebridge": "^1.3.9",
